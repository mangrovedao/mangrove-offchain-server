{
  "name": "mangrove-offchain-server",
  "version": "0.1.0",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "clean": "rimraf dist && rimraf coverage",
    "format": "prettier --write \"{src,__tests__}/**/*.ts\"",
    "lint": "eslint ./src --ext .ts",
    "prepublishOnly": "yarn build",
    "gen": "prisma generate",
    "prepare": "yarn gen",
    "prebuild": "yarn clean && yarn format && yarn lint && echo Using TypeScript && tsc --version",
    "build": "yarn gen && tsc --project tsconfig.build.json --pretty",
    "test": "jest --passWithNoTests",
    "coverage": "jest --coverage",
    "start:server": "ts-node -r tsconfig-paths/register src/cmd/server.ts",
    "start:consumer": "ts-node -r tsconfig-paths/register src/cmd/consumer.ts",
    "dev": "ts-node -r tsconfig-paths/register src/cmd/dev.ts",
    "start:dist:server": "node dist/cmd/server.js",
    "start:dist:consumer": "node dist/cmd/consumer.js",
    "watch": "yarn build -- --watch",
    "watch:test": "jest --watch",
    "docker:env": "docker-compose -f deploy/docker-compose.env.yml up"
  },
  "dependencies": {
    "@apollo/server": "^4.2.2",
    "@prisma/client": "^4.6.1",
    "@proximaone/stream-client-js": "^0.7.0",
    "@proximaone/stream-schema-fungible-token": "^0.2.0",
    "@proximaone/stream-schema-mangrove": "^0.2.6",
    "@types/cors": "^2.8.12",
    "@types/graphql-fields": "^1.3.4",
    "async-retry": "^1.3.3",
    "bignumber.js": "^9.0.2",
    "body-parser": "^1.20.1",
    "class-validator": "^0.13.2",
    "commander": "^9.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "graphql": "^16.6.0",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.20.1",
    "lodash": "^4.17.21",
    "node-fetch-cache": "^3.0.5",
    "prisma": "^4.6.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.4",
    "tslib": "^2.4.1",
    "type-graphql": "2.0.0-beta.1",
    "typegraphql-prisma": "^0.23.0"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.3",
    "@types/commander": "^2.12.2",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/node": "^14.18.4",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.6.0",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.9.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "preset": "<rootDir>/"
  },
  "packageManager": "yarn@3.1.0"
}
