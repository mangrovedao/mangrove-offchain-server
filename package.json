{
  "name": "mangrove-offchain-server",
  "version": "0.1.0",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "clean": "rimraf dist && rimraf coverage",
    "format": "prettier --write \"{src,__tests__}/**/*.ts\"",
    "lint": "eslint ./src --ext .ts",
    "prepublishOnly": "yarn build",
    "gen": "prisma generate",
    "prepare": "yarn gen",
    "precommit": "lint-staged",
    "prebuild": "yarn clean && yarn format && yarn lint && echo Using TypeScript && tsc --version",
    "build": "yarn gen && tsc --project tsconfig.build.json --pretty",
    "start:server": "dotenv -e .env.development -- ts-node -r tsconfig-paths/register src/cmd/server.ts",
    "start:test:server": "dotenv -e .env.test -- ts-node -r tsconfig-paths/register src/cmd/server.ts",
    "start:consumer": "dotenv -e .env.development -- ts-node -r tsconfig-paths/register src/cmd/consumer.ts",
    "dev": "ts-node -r tsconfig-paths/register src/cmd/dev.ts",
    "start:dist:server": "ts-node -r tsconfig-paths/register dist/cmd/server.js",
    "start:dist:consumer": "ts-node -r tsconfig-paths/register dist/cmd/consumer.js",
    "watch": "yarn build -- --watch",
    "docker:env": "dotenv -e .env.development -- docker-compose -f deploy/docker-compose.env.yml up",
    "docker:env:down": "dotenv -e .env.development -- docker-compose -f deploy/docker-compose.env.yml down",
    "docker:test:up": "dotenv -e .env.test -- docker-compose -f deploy/docker-compose.test.env.yml up -d",
    "docker:test:down": "dotenv -e .env.test -- docker-compose -f deploy/docker-compose.test.env.yml down",
    "test": "yarn run test:unit && yarn run test:integration",
    "test:integration": "dotenv -e .env.test -- yarn test:internal:integration",
    "test:internal:integration": " yarn docker:test:up && yarn prisma:reset && npx prisma migrate deploy && cross-env NODE_ENV=test nyc --reporter=lcov mocha --config test/mocha/config/integration-tests.json --exit && yarn docker:test:down",
    "test:unit": "cross-env NODE_ENV=test nyc --reporter=lcov mocha --config test/mocha/config/unit-tests.json --exit",
    "debug:integration": "dotenv -e .env.test -- yarn debug:internal:integration",
    "debug:internal:integration": "yarn docker:test:up && yarn prisma:reset && npx prisma migrate deploy && cross-env NODE_ENV=test nyc --reporter=lcov mocha --inspect --config test/mocha/config/integration-tests.json --exit && yarn docker:test:down",
    "debug:unit": "cross-env NODE_ENV=test nyc --reporter=lcov mocha --inspect --config test/mocha/config/unit-tests.json --exit",
    "test:coverage": "cross-env NODE_ENV=test nyc --reporter=lcov mocha --config test/mocha/config/coverage-tests.json --exit",
    "prisma:deploy": "dotenv -e .env.development -- npx prisma migrate deploy",
    "prisma:reset": "dotenv -e .env.development -- prisma migrate reset -f",
    "prisma:migrate": "dotenv -e .env.development -- prisma migrate dev --name ${0}"
  },
  "lint-staged": {
    "*.{js,ts,css,md,json,mjs}": "prettier --write"
  },
  "dependencies": {
    "@apollo/server": "^4.2.2",
    "@espendk/json-file-reporter": "^1.4.2",
    "@prisma/client": "^4.6.1",
    "@proximaone/stream-client-js": "^1.2.1",
    "@proximaone/stream-schema-mangrove": "^0.3.6",
    "@types/cors": "^2.8.12",
    "@types/graphql-fields": "^1.3.4",
    "async-retry": "^1.3.3",
    "bignumber.js": "^9.0.2",
    "body-parser": "^1.20.1",
    "class-validator": "^0.13.2",
    "commander": "^9.2.0",
    "config": "^3.3.8",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^6.0.0",
    "dotenv-flow": "^3.2.0",
    "eslint-config-prettier": "^8.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "graphql": "^16.6.0",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.20.1",
    "lint-staged": "^13.1.0",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "mocha-multi-reporters": "^1.5.1",
    "node-fetch-cache": "^3.0.5",
    "nyc": "^15.1.0",
    "prisma": "^4.6.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "tslib": "^2.4.1",
    "type-graphql": "2.0.0-beta.1",
    "typegraphql-prisma": "^0.23.0"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.3",
    "@types/commander": "^2.12.2",
    "@types/config": "^3.3.0",
    "@types/dotenv-flow": "^3.2.0",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^9.1.1",
    "@types/node": "^14.18.4",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.6.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "yarn@3.3.0"
}
